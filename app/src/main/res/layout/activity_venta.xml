<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".VentaActivity">
<LinearLayout
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:layout_marginHorizontal="20dp"
    android:layout_marginTop="40dp"
    android:orientation="vertical">
    <EditText
        android:id="@+id/Paytxtcompras"
        android:textSize="1dp"
        android:inputType="none"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textColor="@color/black"/>


    <TextView

        android:id="@+id/txtxporx"
        android:gravity="center"
        android:text="0"
        android:textSize="40sp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"/>
    <TextView
        android:id="@+id/Paytxtstock"
        android:layout_marginTop="10dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:hint="STOCK"/>

    <com.google.android.material.textfield.TextInputLayout

        android:layout_width="match_parent"
        android:layout_below="@+id/ly1"
        android:layout_height="wrap_content"

        style="@style/Widget.MaterialComponents.TextInputLayout.OutlinedBox"
        app:startIconDrawable="@drawable/ic_numbers"
        app:helperText="*Requerido"

        android:hint="Cantidad a comprar">
        <com.google.android.material.textfield.TextInputEditText
            android:id="@+id/Paytxtcantidad"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            />
    </com.google.android.material.textfield.TextInputLayout>



    <TextView

        android:layout_marginTop="10dp"
        android:text="Valor de la maquina"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"/>
    <TextView
        android:id="@+id/Paytxtprecio"
        android:layout_marginTop="10dp"
        android:textSize="20sp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"/>
    <TextView

        android:layout_marginTop="10dp"
        android:text="Dinero disponible"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"/>
    <TextView
        android:id="@+id/Paytxtproveedor"
        android:layout_marginTop="10dp"
        android:textSize="20sp"

        android:layout_width="match_parent"
        android:layout_height="wrap_content"/>




    <ImageView
        android:layout_marginTop="40dp"
        android:layout_marginBottom="10dp"
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:background="@color/black"/>
    <TextView

        android:text="En unos minutos luego de comprar la maquina se te enviaran por Wsp o Telegram los datos de las maquinas y podras verla en el registro"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:textStyle="italic"/>
    <ImageView
    android:layout_marginVertical="10dp"
    android:layout_width="match_parent"
    android:layout_height="1dp"
    android:background="@color/black"/>




    <TextView
        android:text="especificaciones"
        android:textSize="20sp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"/>
    <TextView
        android:id="@+id/txtram"
        android:layout_marginTop="10dp"
        android:text="RAM"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"/>
    <TextView
        android:id="@+id/txtcpu"
        android:layout_marginTop="10dp"
        android:text="CPU"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"/>
    <TextView
        android:id="@+id/txtred"
        android:layout_marginTop="10dp"
        android:text="RED"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"/>
    <TextView
        android:id="@+id/txtsoport"
        android:layout_marginTop="10dp"
        android:text="Soportado"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"/>

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:onClick="ClickComprar"
        android:text="COMPRAR" />



</LinearLayout>

</RelativeLayout>